<openerp>
  <data>

    <record model="ir.ui.view" id="activos_view_account_asset_form">
        <field name="name">activos.account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group" position="after">
                <group string="Informacion adicional">
                    <field name="localidad_id"/>
                    <field name="area_id"/>
                    <field name="responsable_id"/>
                    <field name="numero_de_serie"/>
                    <field name="marca"/>
                    <field name="modelo"/>
                    <field name="etiqueta"/>
                    <field name="estado"/>
                </group>
            </xpath>
        </field>
    </record>

  </data>
</openerp>